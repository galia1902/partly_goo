
<div class="dash-container">
  <div class="dash-header">
    <div class="dash-back-btn">
      <%= link_to "", root_path, class: 'dash-back-btn-icon' %>
    </div>
    <p class = "invisible"><% current_user.nil? ? "Not Logged In" : current_user.username.capitalize %></p>
