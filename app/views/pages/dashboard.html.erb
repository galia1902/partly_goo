      <% display_name = "<em>You aren't logged in!</em" %>
    <% elsif current_user.username.nil?%>
      <% display_name = current_user.email  %>
    <% else %>
      <% display_name = current_user.username %>
    <% end %>
    <% %>
    <p><%= display_name %></p>
